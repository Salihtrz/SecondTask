@model List<ResultProductDto>
@{
    Layout = null;
    int count = 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Second Task</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Dashboard/html/bootstrap/css/bootstrap.min.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Template style -->
    <link rel="stylesheet" href="~/Dashboard/html/dist/css/style.css">
    <link rel="stylesheet" href="~/Dashboard/html/tables/et-line-font/et-line-font.css">
    <link rel="stylesheet" href="~/Dashboard/html/tables/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/Dashboard/html/dist/weather/weather-icons.min.css">
    <link type="text/css" rel="stylesheet" href="~/Dashboard/html/dist/weather/weather-icons-wind.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body class="sidebar-mini">
    <div class="wrapper">

        <!-- Main Header -->
        <header class="main-header dark-bg">

            <!-- Logo -->
            <a href="/Product/Index/" class="logo dark-bg">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><img src="~/Dashboard/html/logo/SecondTaskLogo.png" alt="Ovio"></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><img src="~/Dashboard/html/logo/SecondTaskLogo.png" alt="Ovio"></span>
            </a>

            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Tasks Menu -->
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <a class="dropdown-toggle"> <span class="hidden-xs">@ViewBag.Username</span> </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar dark-bg">
            <section class="sidebar">
                <div class="user-panel black-bg">
                    <div class="pull-left info" style="width:100%;text-align:center;position:relative;padding:0;left:0;">
                        <p>@ViewBag.Username</p>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li> <a href="/Product/Index/"> <i class="fa fa-list"></i> <span>Products</span></a> </li>
                </ul>
                <!-- sidebar-menu -->
            </section>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>Products</h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-list"></i> Products</li>
                    <li class="active"><i class="fa fa-table"></i> Product List</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="chart-box">
                            <h4>Product List</h4>
                            <p>You can see the list of all products on this page.</p>
                            <div class="bs-example" data-example-id="bordered-table">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>ProductName</th>
                                            <th>Description</th>
                                            <th>Price</th>
                                            <th>Brand</th>
                                            <th>Status</th>
                                            <th>Update</th>
                                            <th>Details</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.ProductName</td>
                                                <td>@item.Description</td>
                                                <td>@item.Price</td>
                                                <td>@item.Brand</td>
                                                <td>@item.Status</td>
                                                <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-success btn-outline">Update</a></td>
                                                <td><a href="/Product/ProductDetails/@item.Id" class="btn btn-primary btn-outline">Details</a></td>
                                                <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger btn-outline">Delete</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Product/CreateProduct/" class="btn btn-warning btn-outline">Create New Product</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- content -->
        </div>
        <!-- content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer dark-bg">
            <div class="pull-right hidden-xs"> Version 1.0</div>
            Copyright &copy; 2017 Yourdomian. All rights reserved.
        </footer>
    </div>
    <!-- wrapper -->
    <!-- jQuery -->
    <script src="~/Dashboard/html/dist/js/jquery.min.js"></script>
    <script src="~/Dashboard/html/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Dashboard/html/dist/js/ovio.js"></script>
</body>
</html>