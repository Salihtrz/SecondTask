@model CreateRegisterDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/LoginRegister/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    <div class="register-page">
        <div class="login-container">
            <div class="login-box" style="height:571px;">
                <div class="login-image"></div>
                <div>
                    <div class="login-header">
                        <img src="~/Dashboard/html/logo/SecondTaskLogo.png" class="login-logo">
                        <h1>Create your account</h1>
                    </div>
                    <form class="login-form" method="post">
                        <div class="form-group">
                            <input type="text" asp-for="Name" id="name">
                            <label for="name">Name</label>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Surname" id="surname">
                            <label for="surname">Surname</label>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Username" id="username">
                            <label for="username">Username</label>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Password" id="password">
                            <label for="password">Password</label>
                            <i class="fas fa-eye toggle-password"></i>
                        </div>
                        <div class="form-buttons">
                            <a href="/Login/Index/" class="create-account">Sign in instead</a>
                            <button type="submit" class="login-button">Create account</button>
                        </div>
                    </form>
                    <div class="login-footer">
                        <p>Already have an account?</p>
                        <div class="terms-links">
                            <a href="/Login/Index/">Sign in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/LoginRegister/js/app.js"></script>
</body>

</html>